<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>geomesa</artifactId>
        <groupId>org.locationtech.geomesa</groupId>
        <version>1.1.0-rc.3-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>geomesa-accumulo</artifactId>
    <name>GeoMesa Accumulo</name>
    <packaging>pom</packaging>

    <modules>
        <module>geomesa-accumulo-datastore</module>
        <module>geomesa-iterators</module>
    </modules>

    <profiles>
        <profile>
            <id>Accumulo 1.6</id>
            <activation>
                <property><name>!accumulo-1.5</name></property>
            </activation>
            <properties>
                <accumulo.version>1.6.2</accumulo.version>
            </properties>
            <dependencyManagement>
                <dependencies>
                    <!-- Accumulo 1.6 dependency -->
                    <dependency>
                        <groupId>org.apache.accumulo</groupId>
                        <artifactId>accumulo-server-base</artifactId>
                        <version>${accumulo.version}</version>
                        <scope>provided</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>
            <modules>
                <module>geomesa-accumulo-adapter-1.6</module>
            </modules>
        </profile>

        <profile>
        <id>Accumulo 1.5</id>
        <activation>
            <property><name>accumulo-1.5</name></property>
        </activation>
        <properties>
            <accumulo.version>1.5.2</accumulo.version>
        </properties>
        <dependencyManagement>
            <dependencies>
                <!-- Accumulo 1.5 dependency -->
                <dependency>
                    <groupId>org.apache.accumulo</groupId>
                    <artifactId>accumulo-server</artifactId>
                    <version>${accumulo.version}</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </dependencyManagement>
            <modules>
                <module>geomesa-accumulo-adapter-1.5</module>
            </modules>
    </profile>

</profiles>

</project>
