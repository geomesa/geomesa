if  [[ $1 = configure ]]; then
    SOURCE="${BASH_SOURCE[0]}"
    while [ -h "${SOURCE}" ]; do # resolve $SOURCE until the file is no longer a symlink
       bin="$( cd -P "$( dirname "${SOURCE}" )" && pwd )"
       SOURCE="$(readlink "${SOURCE}")"
       [[ "${SOURCE}" != /* ]] && SOURCE="${bin}/${SOURCE}" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
    done
    bin="$( cd -P "$( dirname "${SOURCE}" )" && cd ../ && pwd )"
    echo "Setting GEOMESA_HOME to "$bin""
    export GEOMESA_HOME="$bin"
    export PATH=${GEOMESA_HOME}/bin:$PATH
else
    if [[ (-z "$GEOMESA_HOME") ]]; then
        echo "Your environment variables are not configured appropriately. Please run 'geomesa configure' and ensure that $GEOMESA_HOME is set in your environment variables."
    elif [ -n "$*" ]; then
        java -jar ${GEOMESA_HOME}/geomesa-tools/target/geomesa-tools-accumulo1.5-1.0.0-SNAPSHOT-shaded.jar $*
    else
        java -jar ${GEOMESA_HOME}/geomesa-tools/target/geomesa-tools-accumulo1.5-1.0.0-SNAPSHOT-shaded.jar --help
    fi
fi